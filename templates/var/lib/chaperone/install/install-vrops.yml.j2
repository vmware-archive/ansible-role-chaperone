  - "vRealize Operation Manager":
    - id: install_vrops
      name: "Deploy OVAs"
      commands:
        - "/opt/{{ django_app }}/{{ django_app }}_play vrops.yml --tags vropsova_deploy"
    - id: vrops_admin_init
      name: "Initialize Admin User"
      commands:
        - "/opt/{{ django_app }}/{{ django_app }}_play vrops.yml --tags vrops_admin_init"
    - id: vrops_master_init
      name: "Initialize Master Node"
      commands:
        - "/opt/{{ django_app }}/{{ django_app }}_play vrops.yml --tags vrops_master_init"
    - id: vrops_cluster_init
      name: "Initialize Cluster"
      commands:
        - "/opt/{{ django_app }}/{{ django_app }}_play vrops.yml --tags vrops_cluster_init"
